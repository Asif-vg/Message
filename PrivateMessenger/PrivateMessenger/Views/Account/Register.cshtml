@model VmRegister
@{
    ViewData["Title"] = "Register";
}


<div class="container">
    <div class="row">
        <div class="col-lg-6 offset-lg-3">
            <div asp-validation-summary="All" class="text-danger"></div>
            <form asp-controller="Account" asp-action="Register" method="post">
                <div class="mb-3">
                    <label asp-for="@Model.Name" class="form-label">Name</label>
                    <input class="form-control" asp-for="@Model.Name">
                    <span asp-validation-for="@Model.Name" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="@Model.Surname" class="form-label">Surname</label>
                    <input class="form-control" asp-for="@Model.Surname">
                    <span asp-validation-for="@Model.Surname" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="@Model.Email" class="form-label">Email</label>
                    <input type="email" class="form-control" asp-for="@Model.Email">
                    <span asp-validation-for="@Model.Email" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="@Model.Password" class="form-label">Password</label>
                    <input type="password" class="form-control" asp-for="@Model.Password">
                    <span asp-validation-for="@Model.Password" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-primary">Register</button>
            </form>
        </div>
    </div>
</div>